<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.ocmusicevent.EventDetailsActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/eventImageView"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_weight="10"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/eventTitleTextView"
        android:layout_weight="2"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/eventDateDayTextView"
        android:layout_weight="1"
        android:elevation="0dp"
        android:textSize="18sp" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/eventTimeTextView"
        android:layout_weight="1"
        android:elevation="0dp"
        android:textSize="18sp" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/eventLocationTextView"
        android:layout_weight="1"
        android:elevation="0dp"
        android:textSize="18sp" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/eventAddress1TextView"
        android:layout_weight="1"
        android:elevation="0dp"

        android:textSize="18sp" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/eventAddress2TextView"
        android:layout_weight="1"
        android:elevation="0dp"
        android:textSize="18sp" />

</LinearLayout>
